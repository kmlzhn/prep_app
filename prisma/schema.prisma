generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  clerkId       String   @unique
  email         String   @unique
  firstName     String?
  lastName      String?
  phoneNumber   String?
  targetScore   Float?   @default(7.0)
  currentLevel  String?  @default("Beginner")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // IELTS specific fields
  practiceTests PracticeTest[]
  scores        Score[]
  lessonProgress LessonProgress[]
  
  @@map("users")
}

model PracticeTest {
  id          String   @id @default(cuid())
  userId      String
  type        String   // 'speaking', 'writing', 'reading', 'listening'
  score       Float?
  feedback    String?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("practice_tests")
}

model Score {
  id          String   @id @default(cuid())
  userId      String
  section     String   // 'overall', 'speaking', 'writing', 'reading', 'listening'
  score       Float
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("scores")
}

model LessonProgress {
  id          String   @id @default(cuid())
  userId      String
  courseSlug  String   // 'ielts-basics', 'speaking-skills', etc.
  lessonId    Int      // ID урока
  completed   Boolean  @default(true)
  completedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, courseSlug, lessonId])
  @@map("lesson_progress")
}
